// JSHint Configuration

{
  "node": true,
  "eqeqeq": true,
  "trailing": true,
  "strict": true,

  "unused": true,         // Warns for unused variables
  "forin": true,          // Requires all for in loops to filter object's items

  "sub": true,            // Tolerate using `[]` notation
  "laxbreak": true,       // Tolerate possibly unsafe line breakings

  "-W065": false,         // Missing radix parameter.
  "-W110": false          // Mixed double and single quotes.
}
